{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}fee.registration.edit{% endtrans %}{% endblock %}

{% block content %}
<form action="{{ path('fee_registration_update', { 'id': entity.id, 'page': app.request.get('page') }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
    {{ form_widget(edit_form) }}
	<div class="form-actions">
	    <button type="submit" class="btn primary">{{ 'label.submit.update'|trans }}</button>
    </div>
</form>

<form id="delete-form" action="{{ path('fee_registration_delete', { 'id': entity.id }) }}" method="post" class="form-inline">
    {{ form_widget(delete_form) }}
    <button type="submit" class="btn alternative icon danger remove">{{ 'label.delete'|trans }}</button>
</form>

<ul class="pills">
    <li>
        <a href="{{ path('fee_registration') }}">{{ 'link.backtolist'|trans }}</a>
    </li>
</ul>
<script language="javascript" type="text/javascript">
$(document).ready(function() {
	$("#delete-form").submit(function(){
		{% set namaJenisBiaya = entity.jenisbiaya is not null ? entity.jenisbiaya.nama : '' %}
		var confirmtext = "{{ 'confirm.drop.fee.registration'|trans({ '%fee%': namaJenisBiaya, '%nominal%': entity.nominal|number_format(0, ',', '.') }) }}";
		confirmtext = confirmtext.replace(/&#039;/g, "'");
		return confirmDropButton(confirmtext);
	});
});
</script>
{% endblock content %}
