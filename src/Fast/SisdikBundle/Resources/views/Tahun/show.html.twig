{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}data.year.detail{% endtrans %}{% endblock %}
{% block content %}
<dl>
    <dt>{{ 'label.school'|trans }}</dt>
    <dd>{{ entity.idsekolah.nama }}</dd>
    <dt>{{ 'label.year.entry'|trans }}</dt>
    <dd>{{ entity.nama }}</dd>
    <dt>{{ 'label.code'|trans }}</dt>
    <dd>{{ entity.kode }}</dd>
    <dt>{{ 'label.description'|trans }}</dt>
    <dd>{{ entity.keterangan }}</dd>
    <dt>{{ 'label.order'|trans }}</dt>
    <dd>{{ entity.urutan }}</dd>
</dl>

<div class="clearfix"></div>

<form id="delete-form" action="{{ path('data_year_delete', { 'id': entity.id, 'page': app.request.get('page') }) }}" method="post"class="form-inline">
    {{ form_widget(delete_form) }}
    <div class="form-actions">
        <button type="submit" class="btn alternative icon danger remove">{{ 'label.delete'|trans }}</button>
    </div>
</form>

<ul class="pills">
    <li>
        <a href="{{ path('data_year', {'page': app.request.get('page')}) }}">{{ 'link.backtolist'|trans }}</a>
    </li>
    <li>
        <a href="{{ path('data_year_edit', { 'id': entity.id, 'page': app.request.get('page') }) }}">{{ 'link.edit'|trans }}</a>
    </li>
</ul>

<div class="clearfix"></div>

<div class="add-link pull-right">
{% image '@FastSisdikBundle/Resources/public/images/forms/icon_plus.gif' %}
	<a href="{{ path('data_year_new') }}" class="add-link-a">
	    <img src="{{ asset_url }}" alt="{{ 'alt.add'|trans }}" border="0" width="21" height="21" style="vertical-align: middle;" />
	    {{ 'label.year.add'|trans }}
	</a>
{% endimage %}
</div>

<script language="javascript" type="text/javascript">
$(document).ready(function() {
	$("#delete-form").submit(function(){
		var confirmtext = "{{ 'confirm.drop.year'|trans({ '%year%': entity.nama }) }}";
		confirmtext = confirmtext.replace(/&#039;/g, "'");
		return confirmDropButton(confirmtext);
	});
});
</script>
{% endblock content %}
