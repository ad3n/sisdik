{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}settings.user.edit{% endtrans %}{% endblock %}
{% block content %}
<form action="{{ path('settings_user_edit', {'id': id}) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
    {{ form_widget(form) }}
	<div class="form-actions">
	    <button type="submit" class="btn primary">{{ 'label.submit.update'|trans }}</button>
	</div>
</form>
<ul class="pills">
    <li>
        <a href="{{ path('settings_user', {'page': app.request.get('page')}) }}">{{ 'link.backtolist'|trans }}</a>
    </li>
</ul>
{% endblock content %}
