{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}settings.user.edit{% endtrans %}{% endblock %}
{% block content %}
<form action="{{ path('settings_user_inschool_edit', {'id': id, 'page': page}) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
    {{ form_widget(form) }}
	<div class="form-actions">
	    <button type="submit" class="btn primary">{{ 'label.submit.update'|trans }}</button>
	</div>
</form>

<ul class="pills">
    <li>
        {% if page is defined %}
        <a href="{{ path('settings_user_inschool_list', {'page': page}) }}">{{ 'link.backtolist'|trans }}</a>
        {% else %}
        <a href="{{ path('settings_user_inschool_list', {'page': app.request.get('page')}) }}">{{ 'link.backtolist'|trans }}</a>
        {% endif %}
    </li>
</ul>
{% endblock content %}
