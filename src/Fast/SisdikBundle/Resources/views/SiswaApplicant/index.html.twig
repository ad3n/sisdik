{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}applicant.list{% endtrans %}{% endblock %}

{% block content %}
<style type="text/css">
.control-group {
    display: inline-block;
    margin-right: 0.4em;
}
</style>

<div class="filter-section">
    <form method="GET" action="{{ path('applicant') }}" class="form-search form-inline">
        {{ form_widget(searchform) }}
        <button type="submit" class="btn primary alternative icon search">{{ 'label.search'|trans }}</button>
        <button class="btn" type="reset" onclick="window.location.href='{{ path('applicant') }}'">{{ 'label.reset'|trans }}</button>
    </form>
</div>

<div class="add-link">
{% image '@FastSisdikBundle/Resources/public/images/forms/icon_plus.gif' %}
	<a href="{{ path('applicant_new') }}" class="add-link-a">
	    <img src="{{ asset_url }}" alt="{{ 'alt.add'|trans }}" border="0" width="21" height="21" style="vertical-align: middle;" />
	    {{ 'label.applicant.add'|trans }}
	</a>
{% endimage %}
</div>

<div class="clearfix"></div>

<table class="table zebra-striped bordered-table" id="no-more-tables">
    <thead>
    	<tr>
    		<th>{{ 'label.year.entry'|trans }}, {{ 'label.admissiongroup.entry'|trans }}</th>
    		<th class="{% if pagination.isSorted('t.namaLengkap') %}sorted{% endif %}">
                {{ knp_pagination_sortable(pagination, 'label.name.full'|trans, 't.namaLengkap') }}
    	    </th>
    		<th>{{ 'label.name.parent.or.guardian'|trans }}</th>
    		<th>{{ 'label.mobilephone.parent'|trans }}</th>
    		<th>{{ 'label.actions'|trans }}</th>
    	</tr>
	</thead>
	<tbody>
    {% for data in pagination %}
        <tr>
    		<td data-title="{{ 'label.year.entry'|trans }}, {{ 'label.admissiongroup.entry'|trans }}">{% if data.tahun is defined %}{{ data.tahun.tahun }}{% endif %}, {% if data.gelombang is defined %}{{ data.gelombang.nama }}{% endif %}</td>
    		<td data-title="{{ 'label.name.full'|trans }}">{{ data.namaLengkap }}</td>
    		{% if data.orangtuaWali %}
    		    {% for orangtua in data.orangtuaWali %}
    		        {% if orangtua %}
    		            {% if orangtua.aktif == 1 %}
        		            <td data-title="{{ 'label.name.parent.or.guardian'|trans }}">{{ orangtua.nama }}</td>
        		            <td data-title="{{ 'label.mobilephone.parent'|trans }}">{{ orangtua.ponsel }}</td>
        		        {% endif %}
    		        {% endif %}
    		    {% endfor %}
    		{% endif %}
    		<td data-title="{{ 'label.actions'|trans }}" class="row-actions">
        		<a href="{{ path('applicant_show', {'id': data.id, 'page': pagination.paginationData.current}) }}" title="{{ 'tip.detail'|trans }}" class="icon-arrow-right"></a>
    		{% if tahunaktif == data.tahun.tahun %}
        		<a href="{{ path('applicant_editregphoto', {'id': data.id, 'page': pagination.paginationData.current}) }}" title="{% trans %}tip.edit.regphoto{% endtrans %}" class="icon-camera"></a>
        		<a href="{{ path('applicant_edit', {'id': data.id, 'page': pagination.paginationData.current}) }}" title="{% trans %}tip.edit.full.form{% endtrans %}" class="icon-edit"></a>
    		{% endif %}
    		</td>
    	</tr>
    {% endfor %}
    </tbody>
</table>
{{ knp_pagination_render(pagination) }}
{% endblock content %}