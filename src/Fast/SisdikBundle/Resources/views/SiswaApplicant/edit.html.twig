{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}applicant.edit{% endtrans %}{% endblock %}

{% block content %}
<form action="{{ path('applicant_update', { 'id': entity.id, 'page': app.request.get('page') }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
    {{ form_widget(edit_form) }}
	<div class="form-actions">
	    <button type="submit" class="btn primary">{{ 'label.submit.update'|trans }}</button>
    </div>
</form>

<form id="delete-form" action="{{ path('applicant_delete', { 'id': entity.id, 'page': app.request.get('page') }) }}" method="post" class="form-inline">
    {{ form_widget(delete_form) }}
    <button type="submit" class="btn alternative icon danger remove">{{ 'label.delete'|trans }}</button>
</form>

<ul class="pills">
    <li>
        {% if page is defined %}
        <a href="{{ path('applicant', {'page': page}) }}">{{ 'link.backtolist'|trans }}</a>
        {% else %}
        <a href="{{ path('applicant', {'page': app.request.get('page')}) }}">{{ 'link.backtolist'|trans }}</a>
        {% endif %}
    </li>
    <li>
        <a href="{{ path('applicant_show', {'id': entity.id}) }}">{{ 'link.studentinfo'|trans }}</a>
    </li>
</ul>

<script language="javascript" type="text/javascript">

$(document).ready(function() {
	$('.date').datepicker({
	    dateFormat: 'dd/mm/yy',
    	changeMonth: true,
        changeYear: true,
        maxDate: "-8Y"
    });

	$("#delete-form").submit(function(){
		var confirmtext = "{{ 'confirm.drop.applicant'|trans({ '%name%': entity.namaLengkap, '%regnum%': '#' ~ entity.nomorPendaftaran }) }}";
		confirmtext = confirmtext.replace(/&#039;/g, "'");
		return confirmDropButton(confirmtext);
	});
});
</script>
{% endblock content %}
