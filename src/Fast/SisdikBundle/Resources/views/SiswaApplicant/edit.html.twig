{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}applicant.edit{% endtrans %}{% endblock %}

{% block content %}
<style type="text/css">
.ui-datepicker-month {
    font-size: 0.9em;
}
.ui-widget {
    font-family: Arial,sans-serif;
    font-size: 0.9em;
}
.ui-autocomplete {
    max-height: 7.4em;
    overflow-y: auto;
    /* prevent horizontal scrollbar */
    overflow-x: hidden;
}
/* IE 6 doesn't support max-height
* we use height instead, but this forces the menu to always be this tall
*/
* html .ui-autocomplete {
    height: 7.4em;
}
.nama-referensi, .nama-sekolah-asal {
{% image '@FastSisdikBundle/Resources/public/images/keyboard.png' %}
	background: white url('{{ asset_url }}') right center no-repeat;
{% endimage %}
}
.ui-autocomplete-loading {
{% image '@FastSisdikBundle/Resources/public/images/ajax-loader-circle-blue.gif' %}
	background: white url('{{ asset_url }}') right center no-repeat;
{% endimage %}
}
</style>
<form action="{{ path('applicant_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
    {{ form_widget(edit_form) }}
	<div class="form-actions">
	    <button type="submit" class="btn primary">{{ 'label.submit.update'|trans }}</button>
    </div>
</form>

<form id="delete-form" action="{{ path('applicant_delete', { 'id': entity.id }) }}" method="post" class="form-inline">
    {{ form_widget(delete_form) }}
    <button type="submit" class="btn alternative icon danger remove">{{ 'label.delete'|trans }}</button>
</form>

<ul class="pills">
    <li>
        <a href="{{ path('applicant') }}">{{ 'link.backtolist'|trans }}</a>
    </li>
    <li>
        <a href="{{ path('applicant_show', {'id': entity.id}) }}">{{ 'link.info.pendaftar'|trans }}</a>
    </li>
</ul>
<script language="javascript" type="text/javascript">
$(document).ready(function() {
	var options1 = {
    	minLength: 2,
    	delay: 1000,
    	source: function(request, response) {
    		$.ajax({
    			url: "{{ path("referensi_ajax_ambilnama") }}",
    			data: {filter: request.term},
    			success: function(data) {
        			response( $.map(data, function(item) {
            			return {
                			label: item.label,
                			value: item.value,
                			id: item.id
            			}
    			    }));
				}
			});
		},
		open: function(event, ui) {
			$(".id-referensi").val("");
		},
		search: function(event, ui) {},
    	select: function(event, ui) {
      		$(".id-referensi").val(ui.item.id);
    	}
	};

	var options2 = {
    	minLength: 2,
    	delay: 1000,
    	source: function(request, response) {
    		$.ajax({
    			url: "{{ path("referensi_ajax_ambilnama") }}",
    			data: {filter: request.term},
    			success: function(data) {
        			response( $.map(data, function(item) {
            			return {
                			label: item.label,
                			value: item.value,
                			id: item.id
            			}
    			    }));
				}
			});
		},
		open: function(event, ui) {
			$(".id-sekolah-asal").val("");
		},
		search: function(event, ui) {},
    	select: function(event, ui) {
      		$(".id-sekolah-asal").val(ui.item.id);
    	}
	};

	$(".nama-referensi").live("keydown.autocomplete", function() {
        $(this).autocomplete(options1);
    });

	$(".nama-sekolah-asal").live("keydown.autocomplete", function() {
        $(this).autocomplete(options2);
    });

	if ($(".id-referensi").val() != "") {
		$.ajax({
			url: "{{ path("referensi_ajax_ambilnama") }}",
			data: {id: $(".id-referensi").val()},
			success: function(data) {
				$(".nama-referensi").val(data[0].value);
			}
		});
	}

	if ($(".id-sekolah-asal").val() != "") {
		$.ajax({
			url: "{{ path("referensi_ajax_ambilnama") }}",
			data: {id: $(".id-sekolah-asal").val()},
			success: function(data) {
				$(".nama-sekolah-asal").val(data[0].value);
			}
		});
	}

	$('.date').datepicker({
	    dateFormat: 'dd/mm/yy',
    	// changeMonth: true,
        changeYear: true,
        maxDate: "-8Y"
    });

	$("#delete-form").submit(function(){
		var confirmtext = "{{ 'confirm.drop.applicant'|trans({ '%name%': entity.namaLengkap, '%regnum%': '#' ~ entity.nomorPendaftaran }) }}";
		confirmtext = confirmtext.replace(/&#039;/g, "'");
		return confirmDropButton(confirmtext);
	});
});
</script>
{% endblock content %}
