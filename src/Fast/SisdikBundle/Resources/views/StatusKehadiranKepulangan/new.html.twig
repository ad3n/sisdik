{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}presence.status.creation{% endtrans %}{% endblock %}

{% block content %}
<form action="{{ path('presence_status_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    {{ form_widget(form) }}
	<div class="form-actions">
	    <button type="submit" class="btn primary">{{ 'label.submit.add'|trans }}</button>
    </div>
</form>
<ul class="pills">
    <li>
        <a href="{{ path('presence_status') }}">{{ 'link.backtolist'|trans }}</a>
    </li>
</ul>
{% endblock content %}