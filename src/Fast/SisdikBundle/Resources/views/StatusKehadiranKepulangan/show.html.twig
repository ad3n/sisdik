{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}presence.status.detail{% endtrans %}{% endblock %}
{% block content %}
<dl>
    <dt>{{ 'label.school'|trans }}</dt>
    <dd>{{ entity.sekolah.nama }}</dd>
    <dt>{{ 'label.presence.status.entry'|trans }}</dt>
    <dd>{{ entity.nama }}</dd>
    <dt>{{ 'label.description'|trans }}</dt>
    <dd>{{ entity.keterangan }}</dd>
</dl>

<div class="clearfix"></div>

<form id="delete-form" action="{{ path('presence_status_delete', { 'id': entity.id, 'page': app.request.get('page') }) }}" method="post" class="form-inline">
    {{ form_widget(delete_form) }}
    <div class="form-actions">
        <button type="submit" class="btn alternative icon danger remove">{{ 'label.delete'|trans }}</button>
    </div>
</form>

<ul class="pills">
    <li>
        <a href="{{ path('presence_status', {'page': app.request.get('page')}) }}">{{ 'link.backtolist'|trans }}</a>
    </li>
    <li>
        <a href="{{ path('presence_status_edit', { 'id': entity.id, 'page': app.request.get('page') }) }}">{{ 'link.edit'|trans }}</a>
    </li>
</ul>

<div class="clearfix"></div>

<div class="add-link pull-right">
{% image '@FastSisdikBundle/Resources/public/images/forms/icon_plus.gif' %}
	<a href="{{ path('presence_status_new') }}" class="add-link-a">
	    <img src="{{ asset_url }}" alt="{{ 'alt.add'|trans }}" border="0" width="21" height="21" style="vertical-align: middle;" />
	    {{ 'label.presence.status.add'|trans }}
	</a>
{% endimage %}
</div>

<script language="javascript" type="text/javascript">
$(document).ready(function() {
	$("#delete-form").submit(function(){
		var confirmtext = "{{ 'confirm.drop.presence.status'|trans({ '%name%': entity.nama, '%school%': entity.sekolah.nama }) }}";
		confirmtext = confirmtext.replace(/&#039;/g, "'");
		return confirmDropButton(confirmtext);
	});
});
</script>
{% endblock content %}
