{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}presence.schedule.detail{% endtrans %}{% endblock %}
{% block content %}
<dl>
    <dt>{{ 'label.school'|trans }}</dt>
    <dd>{{ entity.tahunAkademik.sekolah.nama }}</dd>
    <dt>{{ 'label.year.entry'|trans }}</dt>
    <dd>{{ entity.tahunAkademik.nama }}</dd>
    <dt>{{ 'label.class.entry'|trans }}</dt>
    <dd>{{ entity.kelas.nama }}</dd>
    <dt>{{ 'label.repetition'|trans }}</dt>
    <dd>{{ entity.perulangan }}</dd>
    <dt>{{ 'label.day'|trans }}</dt>
    <dd>{% if entity.mingguanHariKe is empty %}&mdash;{% else %}{{ daynames[entity.mingguanHariKe] }}{% endif %}</dd>
    <dt>{{ 'label.monthday'|trans }}</dt>
    <dd>{% if entity.bulananHariKe is empty %}&mdash;{% else %}{{ entity.bulananHariKe }}{% endif %}</dd>
    <dt>{{ 'label.presence.status.entry'|trans }}</dt>
    <dd>{{ entity.statusKehadiranKepulangan.nama }}</dd>
    <dt>{{ 'label.paramstatusfrom'|trans }}</dt>
    <dd>{% if entity.paramstatusDariJam is empty %}&mdash;{% else %}{{ entity.paramstatusDariJam }}{% endif %}</dd>
    <dt>{{ 'label.paramstatusto'|trans }}</dt>
    <dd>{% if entity.paramstatusHinggaJam is empty %}&mdash;{% else %}{{ entity.paramstatusHinggaJam }}{% endif %}</dd>
    <dt>{{ 'label.realtimesms.hourfrom'|trans }}</dt>
    <dd>{% if entity.smsRealtimeDariJam is empty %}&mdash;{% else %}{{ entity.smsRealtimeDariJam }}{% endif %}</dd>
    <dt>{{ 'label.realtimesms.hourto'|trans }}</dt>
    <dd>{% if entity.smsRealtimeHinggaJam is empty %}&mdash;{% else %}{{ entity.smsRealtimeHinggaJam }}{% endif %}</dd>
    <dt>{{ 'label.sendsms.realtime'|trans }}</dt>
    <dd>
        {% if entity.kirimSmsRealtime is empty %}
            {% image '@FastSisdikBundle/Resources/public/images/cross.png' %}
            <img src="{{ asset_url }}" border="0" height="20" style="vertical-align: middle;" />
            {% endimage %}
        {% else %}
            {% image '@FastSisdikBundle/Resources/public/images/check2.png' %}
            <img src="{{ asset_url }}" border="0" height="20" style="vertical-align: middle;" />
            {% endimage %}
        {% endif %}
    </dd>
    <dt>{{ 'label.command.realtime'|trans }}</dt>
    <dd>{% if entity.commandRealtime is empty %}&mdash;{% else %}{{ entity.commandRealtime }}{% endif %}</dd>
    <dt>{{ 'label.massivesms.hour'|trans }}</dt>
    <dd>{% if entity.smsMassalJam is empty %}&mdash;{% else %}{{ entity.smsMassalJam }}{% endif %}</dd>
    <dt>{{ 'label.sendsms.massive'|trans }}</dt>
    <dd>
        {% if entity.kirimSmsMassal is empty %}
            {% image '@FastSisdikBundle/Resources/public/images/cross.png' %}
            <img src="{{ asset_url }}" border="0" height="20" style="vertical-align: middle;" />
            {% endimage %}
        {% else %}
            {% image '@FastSisdikBundle/Resources/public/images/check2.png' %}
            <img src="{{ asset_url }}" border="0" height="20" style="vertical-align: middle;" />
            {% endimage %}
        {% endif %}
    </dd>
    <dt>{{ 'label.command.massive'|trans }}</dt>
    <dd>{% if entity.commandMassal is empty %}&mdash;{% else %}{{ entity.commandMassal }}{% endif %}</dd>
    <dt>{{ 'label.presencefrom'|trans }}</dt>
    <dd>{% if entity.dariJam is empty %}&mdash;{% else %}{{ entity.dariJam }}{% endif %}</dd>
{#     <dt>{{ 'label.presenceto'|trans }}</dt>#}
{#     <dd>{% if entity.hinggaJam is empty %}&mdash;{% else %}{{ entity.hinggaJam }}{% endif %}</dd>#}
    <dt>{{ 'label.presencecommand'|trans }}</dt>
    <dd>{% if entity.commandJadwal is empty %}&mdash;{% else %}{{ entity.commandJadwal }}{% endif %}</dd>
    <dt>{{ 'label.sms.template.entry'|trans }}</dt>
    <dd>{{ entity.templatesms.nama }} Â» {{ entity.templatesms.teks }}</dd>
</dl>

<div class="clearfix"></div>

{% if is_expr_granted("hasRole('ROLE_SUPER_ADMIN')") %}
<form id="delete-form" action="{{ path('presence_schedule_single_delete', {'id': entity.id}) }}" method="post">
    {{ form_widget(delete_form) }}
    <div class="form-actions">
        <button type="submit" class="btn alternative icon danger remove">{{ 'label.delete'|trans }}</button>
    </div>
</form>
{% endif %}

<ul class="pills">
    <li>
        <a href="{{ path('presence_schedule_single_list') }}">{{ 'link.backtolist'|trans }}</a>
    </li>
    {% if is_expr_granted("hasRole('ROLE_SUPER_ADMIN')") %}
    <li>
        <a href="{{ path('presence_schedule_single_edit', {'id': entity.id}) }}">{{ 'link.edit'|trans }}</a>
    </li>
    {% endif %}
</ul>

<div class="clearfix"></div>

{% if is_expr_granted("hasRole('ROLE_SUPER_ADMIN')") %}
<div class="add-link pull-right">
{% image '@FastSisdikBundle/Resources/public/images/forms/icon_plus.gif' %}
    <a href="{{ path('presence_schedule_single_new') }}" class="add-link-a">
        <img src="{{ asset_url }}" alt="{{ 'alt.add'|trans }}" border="0" width="21" height="21" style="vertical-align: middle;" />
        {{ 'label.presence.schedule.add'|trans }}
    </a>
{% endimage %}
</div>

<script language="javascript" type="text/javascript">
$(document).ready(function() {
    $("#delete-form").submit(function(){
        var confirmtext = "{{ 'confirm.drop.presence.schedule'|trans }}";
        confirmtext = confirmtext.replace(/&#039;/g, "'");
        return confirmDropButton(confirmtext);
    });
});
</script>
{% endif %}
{% endblock content %}
