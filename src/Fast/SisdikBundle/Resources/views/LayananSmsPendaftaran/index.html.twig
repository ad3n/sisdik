{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}smspendaftaran.daftar{% endtrans %}{% endblock %}

{% block content %}
<ul class="nav nav-pills">
    <li>
        <a href="{{ path('smspendaftaran_new') }}" class="add-link-a">
            <i class="fa fa-plus-square fa-lg fa-fw"></i>{{ 'label.smspendaftaran.tambah'|trans }}
        </a>
    </li>
</ul>

<div class="clearfix"></div>

<table class="table zebra-striped bordered-table" id="no-more-tables">
    <thead>
        <tr>
            <th class="{% if pagination.isSorted('t.jenisLayanan') %}sorted{% endif %}">
                {{ knp_pagination_sortable(pagination, 'label.layanansms.jenis'|trans, 't.jenisLayanan') }}
            </th>
            <th>{{ 'label.sms.template.entry'|trans }}</th>
            <th>{{ 'label.actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for data in pagination %}
        <tr>
            <td data-title="{{ 'label.layanansms.jenis'|trans }}">{{ daftarJenisLayanan[data.jenisLayanan]|trans }}</td>
            <td data-title="{{ 'label.sms.template.entry'|trans }}">{{ data.templatesms.nama }} &raquo; {{ data.templatesms.teks }}</td>
            <td data-title="{{ 'label.actions'|trans }}" class="row-actions">
                <a href="{{ path('smspendaftaran_show', {'id': data.id}) }}" title="{{ 'tip.detail'|trans }}"><i class="fa fa-arrow-right"></i></a>
                <a href="{{ path('smspendaftaran_edit', {'id': data.id}) }}" title="{{ 'tip.edit'|trans }}"><i class="fa fa-pencil"></i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{{ knp_pagination_render(pagination) }}
{% endblock content %}
