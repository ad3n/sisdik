{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}settings.admissiongroup.detail{% endtrans %}{% endblock %}
{% block content %}
<ul class="nav nav-pills pull-right">
    <li>
        <a href="{{ path('settings_admissiongroup_new') }}" class="add-link-a">
            <i class="fa fa-plus-square fa-lg fa-fw"></i>{{ 'label.admissiongroup.add'|trans }}
        </a>
    </li>
</ul>

<dl>
    <dt>{{ 'label.school'|trans }}</dt>
    <dd>{{ entity.sekolah.nama }}</dd>
    <dt>{{ 'label.admissiongroup.entry'|trans }}</dt>
    <dd>{{ entity.nama }}</dd>
    <dt>{{ 'label.code'|trans }}</dt>
    <dd>{{ entity.kode }}</dd>
    <dt>{{ 'label.description'|trans }}</dt>
    <dd>{{ entity.keterangan }}</dd>
    <dt>{{ 'label.order'|trans }}</dt>
    <dd>{{ entity.urutan }}</dd>
</dl>

<div class="clearfix"></div>

<form id="delete-form" action="{{ path('settings_admissiongroup_delete', {'id': entity.id}) }}" method="post" class="form-inline pull-right">
    {{ form_widget(delete_form) }}
    <div class="form-actions">
        <button type="submit" class="btn alternative icon danger remove">{{ 'label.delete'|trans }}</button>
    </div>
</form>

<ul class="nav nav-pills">
    <li>
        <a href="{{ path('settings_admissiongroup') }}">{{ 'link.backtolist'|trans }}</a>
    </li>
    <li>
        <a href="{{ path('settings_admissiongroup_edit', {'id': entity.id}) }}">{{ 'link.edit'|trans }}</a>
    </li>
</ul>

<div class="clearfix"></div>
{% endblock content %}

{% block javascripts_custom %}
<script language="javascript" type="text/javascript">
$(document).ready(function() {
    $("#delete-form").submit(function(){
        var confirmtext = "{{ 'confirm.drop.admissiongroup'|trans({ '%admission%': entity.nama, '%code%': entity.kode }) }}";
        confirmtext = confirmtext.replace(/&#039;/g, "'");
        return confirmDropButton(confirmtext);
    });
});
</script>
{% endblock javascripts_custom %}
