{% extends '::base.html.twig' %}

{% block body -%}
    <h1>DokumenSiswa</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Ada</th>
                <td>{{ entity.ada }}</td>
            </tr>
            <tr>
                <th>Namafile</th>
                <td>{{ entity.namaFile }}</td>
            </tr>
            <tr>
                <th>Namafiledisk</th>
                <td>{{ entity.namaFileDisk }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('dokumen') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('dokumen_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('dokumen_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
