{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block title %}{{ 'app.title'|trans }} {% trans %}title.login{% endtrans %}{% endblock %}

{% block body %}
<style type="text/css">
body {
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #f5f5f5;
}

.form-signin {
    max-width: 300px;
    padding: 19px 29px 29px;
    margin: 0 auto 20px;
    background-color: #fff;
    border: 1px solid #e5e5e5;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
    -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
    -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
    box-shadow: 0 1px 2px rgba(0,0,0,.05);
}
.form-signin .form-signin-heading,
.form-signin .checkbox {
    margin-bottom: 10px;
}
.form-signin input[type="text"],
.form-signin input[type="password"] {
    font-size: 16px;
    height: auto;
    margin-bottom: 15px;
    padding: 7px 9px;
}
.login-error {
    margin-top: 10px;
    color: #ff0000;
}
</style>

{% block content %}

<div class="container">

{#     <a class="register-link" href="{{ path("fos_user_registration_register") }}">&raquo; {{ 'links.register'|trans({}, "navigations") }}</a>#}
    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
        <div>
        {% image '@FastSisdikBundle/Resources/public/images/logo_black.png' %}
        	<a href="{{ path("_index") }}"><img src="{{ asset_url }}" alt="{{ 'alt.logo'|trans }}" border="0" width="92" /></a>
        {% endimage %}
        </div>
        <div id="copyright" style="margin: 0 0 10px 0; padding: 0; border: 0;">&copy; 2012 Fast Solution</div>
		<input type="text" id="username" name="_username" value="{{ last_username }}" class="input-block-level" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}">
		<input type="password" id="password" name="_password" class="input-block-level" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}">
	    <button class="btn large primary" type="submit">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
	    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
	    
    	{% block fos_user_content %}
            {% if error %}
                <div class="login-error">{{ error|trans({}, 'FOSUserBundle') }}</div>
            {% endif %}
        {% endblock fos_user_content %}
	</form> 
</div>

{% endblock content %}

{% endblock body %}