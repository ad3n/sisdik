{% extends 'FastSisdikBundle::layout.html.twig' %}

{% form_theme form 'MopaBootstrapBundle:Form:fields.html.twig' %}

{% block page_heading %}{% trans from "headings" %}data.student.generate.username.confirm{% endtrans %}{% endblock %}

{% block content %}
<style type="text/css">
.filter-section .control-group {
    display: inline-block;
    margin-right: 0.4em;
}
</style>

<p>
{{ 'shortinfo.username.generated.file.confirmation'|trans(
        {'%path%': path('siswa_generate_username_download', {'file': file, 'type': type}),
        '%filename%': file ~ '.' ~ type})|raw }}
</p>
<form id="generateform" action="{{ path('siswa_generate_username_confirm', {'file': file, 'type': type, 'regenerate': regenerate}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    {{ form_errors(form) }}
    {{ form_widget(form) }}
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8 col-md-offset-4 col-md-7 col-lg-offset-3 col-lg-9">
            <button type="submit" class="btn primary" id="submit-button">{{ 'label.continue'|trans }}</button>
            &nbsp;<button class="btn" type="reset" onclick="window.location.href='{{ path('siswa_generate_username') }}'">{{ 'label.cancel'|trans }}</button>
        </div>
    </div>
</form>

<div class="clearfix"></div>

<div class="knowledgebase">
    <a href="{{ path('_index') }}" class="a-kb">
        <i class="fa fa-lightbulb-o fa-2x fa-fw"></i>{{ 'link.student.manage.username'|trans({}, 'kb') }}
    </a>
</div>
{% endblock content %}
