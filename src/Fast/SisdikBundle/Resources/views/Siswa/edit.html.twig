{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block page_heading %}
    {{ 'data.student.edit'|trans({}, 'headings') }}
    <br /><span class="emphasis">{{ entity.namaLengkap }}{% if entity.nomorInduk is not null %}, {{ entity.nomorInduk }}{% endif %}</span>
{% endblock %}

{% block content %}
<form action="{{ path('data_student_update', { 'id': entity.id, 'page': app.request.get('page') }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
    {{ form_widget(edit_form) }}
	<div class="form-actions">
	    <button type="submit" class="btn primary">{{ 'label.submit.update'|trans }}</button>
    </div>
</form>

<form id="delete-form" action="{{ path('data_student_deleteconfirm', { 'id': entity.id, 'page': app.request.get('page') }) }}" method="post" class="form-inline">
    {{ form_widget(delete_form) }}
    <button type="submit" class="btn alternative icon danger remove">{{ 'label.delete'|trans }}</button>
</form>

<ul class="pills">
    <li>
        {% if page is defined %}
        <a href="{{ path('data_student', {'page': page}) }}">{{ 'link.backtolist'|trans }}</a>
        {% else %}
        <a href="{{ path('data_student', {'page': app.request.get('page')}) }}">{{ 'link.backtolist'|trans }}</a>
        {% endif %}
    </li>
    <li>
        {% if page is defined %}
        <a href="{{ path('data_student_show', {'id': entity.id, 'page': page}) }}">{{ 'link.showstudent'|trans }}</a>
        {% else %}
        <a href="{{ path('data_student_show', {'id': entity.id, 'page': app.request.get('page')}) }}">{{ 'link.showstudent'|trans }}</a>
        {% endif %}
    </li>
</ul>

<script language="javascript" type="text/javascript">
$(document).ready(function() {
	$('.date').datepicker({
	    dateFormat: 'dd/mm/yy',
    	changeMonth: true,
        changeYear: true,
        maxDate: "-8Y"
    });
    
	$("#delete-form").submit(function(){
		var confirmtext = "{{ 'confirm.drop.student'|trans({ '%student%': entity.namaLengkap }) }}";
		confirmtext = confirmtext.replace(/&#039;/g, "'");
		return confirmDropButton(confirmtext);
	});
});
</script>
{% endblock content %}
