{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}presence.student.list{% endtrans %}{% endblock %}

{% block content %}
<style type="text/css">
.control-group {
    display: inline-block;
    margin-right: 0.4em;
}
.nav .active > a {
    background-color: yellow;
}
.nav a:hover, .nav .active a:hover {
    color: inherit;
    text-decoration: none;
}
.nav > li > a:hover, .nav > li.active > a:hover {
    text-decoration: none;
    background-color: yellow;
}
.form-inline .radio {
    padding-left: 3em;
}
.form-inline .checked label {
    color: #ff0000;
}
</style>

<div class="filter-section">
    <form method="post" action="{{ path('studentspresence_edit') }}" {{ form_enctype(searchform) }} class="form-search form-inline">
        {{ form_widget(searchform) }}
        <button type="submit" class="btn primary alternative icon log">{{ 'label.view'|trans }}</button>
        <button class="btn" type="reset" onclick="window.location.href='{{ path('studentspresence') }}'">{{ 'label.reset'|trans }}</button>
    </form>
</div>

<ul class="nav nav-tabs">
{% for class in class_entities %}
    <li class="{% if loop.first %}active{% endif %}"><a href="#tab{{ class.id }}" data-toggle="tab">{{ class.nama }}</a></li>
{% endfor %}
</ul>

<div class="clearfix"></div>

{% if class_entities %}
    {% if entities %}
<form method="post" action="{{ path('studentspresence_update') }}" class="form-inline" id="presenceform">
<div class="tab-content">
    {% for class in class_entities %}
    <div id="tab{{ class.id }}" class="tab-pane {% if loop.first %}active{% endif %}">
        <dl>
        {% for data in entities if data.kelas.id == class.id %}
            <dt>{{ data.siswa.namaLengkap }}<br /><span style="font-weight: normal;">{{ data.siswa.nomorInduk }}</span></dt>
            <dd>{{ form_widget(form['kehadirankepulangan_' ~ data.id]) }}</dd>
        {% endfor %}
        </dl>
    </div>
    {% endfor %}
</div>
<div class="clearfix"></div>
<div class="form-actions">
    <button type="submit" class="btn primary alternative icon approve">{{ 'label.save'|trans }}</button>
    <div id="output" style="color: #003EB0; "></div>
</div>
</form>
    {% else %}
    <p class="shortinfo">{{ 'shortinfo.tidak.ada.data.kehadiran.siswa'|trans }}</p>
    {% endif %}
{% else %}
<p class="shortinfo">{{ 'shortinfo.no.class.data'|trans }}</p>
{% endif %}

<div class="clearfix"></div>
<script language="javascript" type="text/javascript">
$(document).ready(function() {
	$('.date').datepicker({
	    dateFormat: 'dd/mm/yy',
    	changeMonth: true,
        changeYear: true
    });

	var url = "{{ path('data_class_ajax_updateclass_bylevel') }}";

	$.get(url, {tahunAkademik: {{ tahunAkademik[0].id }}, tingkat: $(".pilih-tingkat").val(), kelas: $(".pilih-kelas").val()}, function(data) {
        $(".pilih-kelas").empty();
        $(".pilih-kelas").html('<option>{{ 'alt.loading'|trans }}</option>');

    	var options = '';
        for (var i = 0; i < data.length; i++) {
            options += '<option value="' + data[i].optionValue + '"'
                + (data[i].optionSelected == 'selected' ? 'selected="selected"' : '') + '>'
                + data[i].optionDisplay + '</option>';
        }
        $(".pilih-kelas").html(options);
    });

    $(".pilih-tingkat").change(function() {
        var kelasval = $(".pilih-kelas").val();
        $(".pilih-kelas").empty();
        $(".pilih-kelas").html('<option>{{ 'alt.loading'|trans }}</option>');

        $.get(url, {tahunAkademik: {{ tahunAkademik[0].id }}, tingkat: $(this).val(), kelas: kelasval}, function(data) {
        	var options = '';
            for (var i = 0; i < data.length; i++) {
                options += '<option value="' + data[i].optionValue + '"'
                + (data[i].optionSelected == 'selected' ? 'selected="selected"' : '') + '>'
                + data[i].optionDisplay + '</option>';
            }
            $(".pilih-kelas").html(options);
        });
    });

    $("#presenceform").submit(function() {
        var url = $("#presenceform").attr("action");
        pingurl = "{{ path("_index") }}";
        // pingurl = "http://www.google.com/action";

        $returnvalue = $.get(pingurl);

        // alert($("#presenceform").serialize());

        {% image '@FastSisdikBundle/Resources/public/images/ajax-loader.gif' %}
        $('#output').html('<img src="{{ asset_url }}" />' + "  {{ 'alt.loading'|trans }}");
        {% endimage %}

        setTimeout(function() {
        	if ($returnvalue.statusText == "OK") {
                $.post(url, {data: $("#presenceform").serialize()},
                    function(data) {
                        if (data.responseCode == 200) {
                            $('#output').html(data.responseText);
                        } else {
                            // if we got to this point we know that the controller
                            // did not return a json_encoded array. We can assume that
                            // an unexpected PHP error occured
                            alert("An unexpected error occured.");
                            // $('#output').html(data);
                        }
                    }
                );
            } else {
                alert('can not reach server (tried in 4 seconds)!');
            }
        }, 4000);

        return false;
    });
});
</script>
{% endblock content %}