{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}applicant.payment.list{% endtrans %}{% endblock %}

{% block content %}
<style type="text/css">
.control-group {
    display: inline-block;
    margin-right: 0.4em;
}
</style>

<div class="filter-section">
    <form method="GET" action="{{ path('applicant_payment') }}" class="form-search form-inline">
        {{ form_widget(searchform) }}
        <button type="submit" class="btn primary alternative icon search">{{ 'label.search'|trans }}</button>
        <button class="btn" type="reset" onclick="window.location.href='{{ path('applicant_payment') }}'">{{ 'label.reset'|trans }}</button>
    </form>
</div>

<div class="clearfix"></div>

<div class="pull-right">
    <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all) }}" title="{{ 'label.refresh.searchresult'|trans }}">{{ 'label.refresh'|trans }}<span class="icon-refresh" style="margin-left: 0.5em; vertical-align: middle;"></span></a>
</div>

<div class="clearfix" style="margin-top: 18px;">&nbsp;</div>

<table class="table zebra-striped bordered-table" id="no-more-tables">
    <thead>
    	<tr>
    		<th>{{ 'label.yearentry.entry'|trans }}</th>
    		<th>{{ 'label.admissiongroup.entry'|trans }}</th>
    		<th class="{% if pagination.isSorted('t.nomorPendaftaran') %}sorted{% endif %}">
                {{ knp_pagination_sortable(pagination, 'label.application.number'|trans, 't.nomorPendaftaran') }}
    	    </th>
    		<th class="{% if pagination.isSorted('t.namaLengkap') %}sorted{% endif %}">
                {{ knp_pagination_sortable(pagination, 'label.name.full'|trans, 't.namaLengkap') }}
    	    </th>
    		<th>{{ 'label.paid.amount'|trans }}</th>
    		<th>{{ 'label.actions'|trans }}</th>
    	</tr>
	</thead>
	<tbody>
    {% for data in pagination %}
        <tr>
    		<td data-title="{{ 'label.yearentry.entry'|trans }}">{% if data.tahunmasuk is defined %}{{ data.tahunmasuk.tahun }}{% endif %}</td>
    		<td data-title="{{ 'label.admissiongroup.entry'|trans }}">{% if data.gelombang is defined %}{{ data.gelombang.nama }}{% endif %}</td>
    		<td data-title="{{ 'label.application.number'|trans }}">{{ data.nomorPendaftaran }}</td>
    		<td data-title="{{ 'label.name.full'|trans }}">{{ data.namaLengkap }}</td>
    		<td data-title="{{ 'label.paid.amount'|trans }}">
    		    {% set totalBayar = 0 %}
    		    {% set totalBayar = data.totalNominalPembayaranSekali + data.totalNominalPembayaranRutin %}
    		    {{ totalBayar|number_format(0, ',', '.') }}
		    </td>
    		<td data-title="{{ 'label.actions'|trans }}" class="row-actions">
        		<a href="{{ path('applicant_payment_show', {'id': data.id, 'page': pagination.paginationData.current}) }}" title="{{ 'tip.payment.detail'|trans }}" class="icon-arrow-right"></a>
        		<a href="{{ path('applicant_payment_oncefee', {'cid': data.id, 'page': pagination.paginationData.current}) }}" title="{% trans %}tip.payment.once{% endtrans %}" class="icon-coin coin"></a>
        		<a href="{{ path('applicant_payment', {'id': data.id, 'page': pagination.paginationData.current}) }}" title="{% trans %}tip.payment.recur{% endtrans %}" class="icon-book"></a>
    		</td>
    	</tr>
    {% endfor %}
    </tbody>
</table>

<div class="pull-right">
    <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all) }}" title="{{ 'label.refresh.searchresult'|trans }}">{{ 'label.refresh'|trans }}<span class="icon-refresh" style="margin-left: 0.5em; vertical-align: middle;"></span></a>
</div>

{{ knp_pagination_render(pagination) }}
{% endblock content %}