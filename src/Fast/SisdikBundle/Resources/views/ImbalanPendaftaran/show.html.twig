{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}reward.amount.detail{% endtrans %}{% endblock %}
{% block content %}
<dl>
    <dt>{{ 'label.school'|trans }}</dt>
    <dd>{{ entity.tahunmasuk.sekolah.nama }}</dd>
    <dt>{{ 'label.yearentry.entry'|trans }}</dt>
    <dd>{{ entity.tahunmasuk.tahun }}</dd>
    <dt>{{ 'label.admissiongroup.entry'|trans }}</dt>
    <dd>{{ entity.gelombang.nama }}</dd>
    <dt>{{ 'label.reward.type.entry'|trans }}</dt>
    <dd>{{ entity.jenisImbalan.nama }}</dd>
    <dt>{{ 'label.nominal'|trans }}</dt>
    <dd>{{ entity.nominal|number_format(0, ',', '.') }}</dd>
</dl>

<div class="clearfix"></div>

<form id="delete-form" action="{{ path('rewardamount_delete', { 'id': entity.id, 'page': app.request.get('page') }) }}" method="post" class="form-inline">
    {{ form_widget(delete_form) }}
    <div class="form-actions">
        <button type="submit" class="btn alternative icon danger remove">{{ 'label.delete'|trans }}</button>
    </div>
</form>

<ul class="pills">
    <li>
        <a href="{{ path('rewardamount', {'page': app.request.get('page')}) }}">{{ 'link.backtolist'|trans }}</a>
    </li>
    <li>
        <a href="{{ path('rewardamount_edit', { 'id': entity.id, 'page': app.request.get('page') }) }}">{{ 'link.edit'|trans }}</a>
    </li>
</ul>

<div class="clearfix"></div>

<div class="add-link pull-right">
{% image '@FastSisdikBundle/Resources/public/images/forms/icon_plus.gif' %}
	<a href="{{ path('rewardamount_new') }}" class="add-link-a">
	    <img src="{{ asset_url }}" alt="{{ 'alt.add'|trans }}" border="0" width="21" height="21" style="vertical-align: middle;" />
	    {{ 'label.reward.amount.add'|trans }}
	</a>
{% endimage %}
</div>
<script language="javascript" type="text/javascript">
$(document).ready(function() {
	$("#delete-form").submit(function(){
		var confirmtext = "{{ 'confirm.drop.reward.amount'|trans({ '%yearentry%': entity.tahunmasuk.tahun, '%admissiongroup%': entity.gelombang.nama, '%rewardtype%': entity.jenisImbalan.nama, '%nominal%': entity.nominal|number_format(0, ',', '.') }) }}";
		confirmtext = confirmtext.replace(/&#039;/g, "'");
		return confirmDropButton(confirmtext);
	});
});
</script>
{% endblock content %}
