{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}token.sekolah.detail{% endtrans %}{% endblock %}
{% block content %}
<dl>
    <dt>{{ 'label.school'|trans }}</dt>
    <dd>{{ entity.sekolah.nama }}</dd>
    <dt>{{ 'label.token.mesin.proxy'|trans }}</dt>
    <dd>{{ entity.mesinProxy }}</dd>
</dl>

<div class="clearfix"></div>

{{ form_start(delete_form, {'attr': {'id': 'delete-form', 'class': 'form-horizontal'}}) }}
{{ form_widget(delete_form) }}
{{ form_end(delete_form) }}

<ul class="nav nav-pills">
    <li>
        <a href="{{ path('token-sekolah') }}">{{ 'link.backtolist'|trans }}</a>
    </li>
    <li>
        <a href="{{ path('token-sekolah_edit', {'id': entity.id}) }}">{{ 'link.edit'|trans }}</a>
    </li>
</ul>

<div class="clearfix"></div>

<ul class="nav nav-pills pull-right">
    <li>
        <a href="{{ path('token-sekolah_new') }}" class="add-link-a">
            <i class="fa fa-plus-square fa-lg fa-fw"></i>{{ 'label.token.sekolah.tambah'|trans }}
        </a>
    </li>
</ul>
{% endblock content %}

{% block javascripts_custom %}
<script language="javascript" type="text/javascript">
$(document).ready(function() {
    $("#delete-form").submit(function(){
        var confirmtext = "{{ 'confirm.drop.token.sekolah'|trans({ '%sekolah%': entity.sekolah.nama }) }}";
        confirmtext = confirmtext.replace(/&#039;/g, "'");
        return confirmDropButton(confirmtext);
    });
});
</script>
{% endblock %}
