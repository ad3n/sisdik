{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}layanansms.daftar{% endtrans %}{% endblock %}

{% block content %}
<style type="text/css">
.control-group {
    display: inline-block;
    margin-right: 0.4em;
}
</style>

<div class="filter-section">
    <form method="GET" action="{{ path('layanansms') }}" class="form-search form-inline">
        {{ form_widget(searchform) }}
        <button type="submit" class="btn primary alternative icon search">{{ 'label.search'|trans }}</button>
        <button class="btn" type="reset" onclick="window.location.href='{{ path('layanansms') }}'">{{ 'label.reset'|trans }}</button>
    </form>
</div>

<div class="add-link">
{% image '@FastSisdikBundle/Resources/public/images/forms/icon_plus.gif' %}
	<a href="{{ path('layanansms_new') }}" class="add-link-a">
	    <img src="{{ asset_url }}" alt="{{ 'alt.add'|trans }}" border="0" width="21" height="21" style="vertical-align: middle;" />
	    {{ 'label.layanansms.tambah'|trans }}
	</a>
{% endimage %}
</div>

<div class="clearfix"></div>

<table class="table zebra-striped bordered-table" id="no-more-tables">
    <thead>
    	<tr>
    		<th>{{ 'label.school'|trans }}</th>
    		<th>{{ 'label.layanansms.entri'|trans }}</th>
    		<th>{{ 'label.aktif'|trans }}</th>
    		<th>{{ 'label.actions'|trans }}</th>
    	</tr>
	</thead>
	<tbody>
    {% for entity in pagination %}
        <tr>
    		<td data-title="{{ 'label.school'|trans }}">{% if entity.sekolah is defined %}{{ entity.sekolah.nama }}{% endif %}</td>
    		<td data-title="{{ 'label.layanansms.entri'|trans }}">{% if daftarJenisLayanan[entity.jenisLayanan] is defined %}{{ daftarJenisLayanan[entity.jenisLayanan]|trans }}{% endif %}</td>
    		<td data-title="{{ 'label.aktif'|trans }}">
    		{% if entity.status == 1 %}
                {% image '@FastSisdikBundle/Resources/public/images/check2.png' %}
                <img src="{{ asset_url }}" border="0" height="25" style="vertical-align: middle;" />
                {% endimage %}
            {% else %}
                {% image '@FastSisdikBundle/Resources/public/images/cross.png' %}
                <img src="{{ asset_url }}" border="0" height="25" style="vertical-align: middle; margin-right: 10px;" />
                {% endimage %}
            {% endif %}
            </td>
    		<td data-title="{{ 'label.actions'|trans }}" class="row-actions">
        		<a href="{{ path('layanansms_show', {'id': entity.id, 'page': pagination.paginationData.current}) }}" title="{{ 'tip.detail'|trans }}" class="icon-arrow-right"></a>
        		<a href="{{ path('layanansms_edit', {'id': entity.id, 'page': pagination.paginationData.current}) }}" title="{{ 'tip.edit'|trans }}" class="icon-edit"></a>
    		</td>
    	</tr>
    {% endfor %}
    </tbody>
</table>
{{ knp_pagination_render(pagination) }}
{% endblock content %}
