{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}sendmessage.options.list{% endtrans %}{% endblock %}

{% block content %}
<style type="text/css">
.control-group {
    display: inline-block;
    margin-right: 0.4em;
}
</style>

<div class="filter-section">
    <form method="GET" action="{{ path('sendmessageoptions') }}" class="form-search form-inline">
        {{ form_widget(searchform) }}
        <button type="submit" class="btn primary alternative icon search">{{ 'label.search'|trans }}</button>
        <button class="btn" type="reset" onclick="window.location.href='{{ path('sendmessageoptions') }}'">{{ 'label.reset'|trans }}</button>
    </form>
</div>

<div class="add-link">
{% image '@FastSisdikBundle/Resources/public/images/forms/icon_plus.gif' %}
	<a href="{{ path('sendmessageoptions_new') }}" class="add-link-a">
	    <img src="{{ asset_url }}" alt="{{ 'alt.add'|trans }}" border="0" width="21" height="21" style="vertical-align: middle;" />
	    {{ 'label.sendmessage.options.add'|trans }}
	</a>
{% endimage %}
</div>

<div class="clearfix"></div>

<table class="table zebra-striped bordered-table" id="no-more-tables">
    <thead>
    	<tr>
    		<th>{{ 'label.school'|trans }}</th>
    		<th>{{ 'label.sendmessage.options.entry'|trans }}</th>
    		<th>{{ 'label.actions'|trans }}</th>
    	</tr>
	</thead>
	<tbody>
    {% for entity in pagination %}
        <tr>
    		<td data-title="{{ 'label.school'|trans }}">{% if entity.sekolah is defined %}{{ entity.sekolah.nama }}{% endif %}</td>
    		<td data-title="{{ 'label.sendmessage.options.entry'|trans }}">
    		    {{ 'label.applicant.recorded'|trans }}:
    		    {% if entity.pendaftaranTercatat == 1 %}
                    {% image '@FastSisdikBundle/Resources/public/images/check2.png' %}
                    <img src="{{ asset_url }}" border="0" height="25" style="vertical-align: middle;" />
                    {% endimage %}
                {% else %}
                    {% image '@FastSisdikBundle/Resources/public/images/cross.png' %}
                    <img src="{{ asset_url }}" border="0" height="25" style="vertical-align: middle; margin-right: 10px;" />
                    {% endimage %}
                {% endif %}
                <br />
    		    {{ 'label.registrationfee.firstpay'|trans }}:
    		    {% if entity.pendaftaranBayarPertama == 1 %}
                    {% image '@FastSisdikBundle/Resources/public/images/check2.png' %}
                    <img src="{{ asset_url }}" border="0" height="25" style="vertical-align: middle;" />
                    {% endimage %}
                {% else %}
                    {% image '@FastSisdikBundle/Resources/public/images/cross.png' %}
                    <img src="{{ asset_url }}" border="0" height="25" style="vertical-align: middle; margin-right: 10px;" />
                    {% endimage %}
                {% endif %}
                <br />
                {{ 'label.registrationfee.pay'|trans }}:
                {% if entity.pendaftaranBayar == 1 %}
                    {% image '@FastSisdikBundle/Resources/public/images/check2.png' %}
                    <img src="{{ asset_url }}" border="0" height="25" style="vertical-align: middle;" />
                    {% endimage %}
                {% else %}
                    {% image '@FastSisdikBundle/Resources/public/images/cross.png' %}
                    <img src="{{ asset_url }}" border="0" height="25" style="vertical-align: middle; margin-right: 10px;" />
                    {% endimage %}
                {% endif %}
                <br />
                {{ 'label.registrationfee.settled'|trans }}:
                {% if entity.pendaftaranBayarLunas == 1 %}
                    {% image '@FastSisdikBundle/Resources/public/images/check2.png' %}
                    <img src="{{ asset_url }}" border="0" height="25" style="vertical-align: middle;" />
                    {% endimage %}
                {% else %}
                    {% image '@FastSisdikBundle/Resources/public/images/cross.png' %}
                    <img src="{{ asset_url }}" border="0" height="25" style="vertical-align: middle; margin-right: 10px;" />
                    {% endimage %}
                {% endif %}

    		</td>
    		<td data-title="{{ 'label.actions'|trans }}" class="row-actions">
        		<a href="{{ path('sendmessageoptions_show', {'id': entity.id, 'page': pagination.paginationData.current}) }}" title="{{ 'tip.detail'|trans }}" class="icon-arrow-right"></a>
        		<a href="{{ path('sendmessageoptions_edit', {'id': entity.id, 'page': pagination.paginationData.current}) }}" title="{% trans %}tip.edit{% endtrans %}" class="icon-edit"></a>
    		</td>
    	</tr>
    {% endfor %}
    </tbody>
</table>
{{ knp_pagination_render(pagination) }}
{% endblock content %}
