{% extends 'FastSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}sendmessage.options.detail{% endtrans %}{% endblock %}
{% block content %}
<dl>
    <dt>{{ 'label.school'|trans }}</dt>
    <dd>{{ entity.sekolah.nama }}</dd>
    <dt>{{ 'label.applicant.recorded'|trans }}</dt>
    <dd>
    {% if entity.pendaftaranTercatat == 1 %}
        {% image '@FastSisdikBundle/Resources/public/images/check2.png' %}
        <img src="{{ asset_url }}" border="0" height="25" style="vertical-align: middle;" />
        {% endimage %}
    {% else %}
        {% image '@FastSisdikBundle/Resources/public/images/cross.png' %}
        <img src="{{ asset_url }}" border="0" height="25" style="vertical-align: middle; margin-right: 10px;" />
        {% endimage %}
    {% endif %}
    </dd>
    <dt>{{ 'label.registrationfee.firstpay'|trans }}</dt>
    <dd>
    {% if entity.pendaftaranBayarPertama == 1 %}
        {% image '@FastSisdikBundle/Resources/public/images/check2.png' %}
        <img src="{{ asset_url }}" border="0" height="25" style="vertical-align: middle;" />
        {% endimage %}
    {% else %}
        {% image '@FastSisdikBundle/Resources/public/images/cross.png' %}
        <img src="{{ asset_url }}" border="0" height="25" style="vertical-align: middle; margin-right: 10px;" />
        {% endimage %}
    {% endif %}
    </dd>
    <dt>{{ 'label.registrationfee.pay'|trans }}</dt>
    <dd>
    {% if entity.pendaftaranBayar == 1 %}
        {% image '@FastSisdikBundle/Resources/public/images/check2.png' %}
        <img src="{{ asset_url }}" border="0" height="25" style="vertical-align: middle;" />
        {% endimage %}
    {% else %}
        {% image '@FastSisdikBundle/Resources/public/images/cross.png' %}
        <img src="{{ asset_url }}" border="0" height="25" style="vertical-align: middle; margin-right: 10px;" />
        {% endimage %}
    {% endif %}
    </dd>
    <dt>{{ 'label.registrationfee.settled'|trans }}</dt>
    <dd>
    {% if entity.pendaftaranBayarLunas == 1 %}
        {% image '@FastSisdikBundle/Resources/public/images/check2.png' %}
        <img src="{{ asset_url }}" border="0" height="25" style="vertical-align: middle;" />
        {% endimage %}
    {% else %}
        {% image '@FastSisdikBundle/Resources/public/images/cross.png' %}
        <img src="{{ asset_url }}" border="0" height="25" style="vertical-align: middle; margin-right: 10px;" />
        {% endimage %}
    {% endif %}
    </dd>
</dl>

<div class="clearfix"></div>

<form id="delete-form" action="{{ path('sendmessageoptions_delete', { 'id': entity.id, 'page': app.request.get('page') }) }}" method="post" class="form-inline">
    {{ form_widget(delete_form) }}
    <div class="form-actions">
        <button type="submit" class="btn alternative icon danger remove">{{ 'label.delete'|trans }}</button>
    </div>
</form>

<ul class="pills">
    <li>
        <a href="{{ path('sendmessageoptions', {'page': app.request.get('page')}) }}">{{ 'link.backtolist'|trans }}</a>
    </li>
    <li>
        <a href="{{ path('sendmessageoptions_edit', { 'id': entity.id, 'page': app.request.get('page') }) }}">{{ 'link.edit'|trans }}</a>
    </li>
</ul>

<div class="clearfix"></div>

<div class="add-link pull-right">
{% image '@FastSisdikBundle/Resources/public/images/forms/icon_plus.gif' %}
	<a href="{{ path('sendmessageoptions_new') }}" class="add-link-a">
	    <img src="{{ asset_url }}" alt="{{ 'alt.add'|trans }}" border="0" width="21" height="21" style="vertical-align: middle;" />
	    {{ 'label.sendmessage.options.add'|trans }}
	</a>
{% endimage %}
</div>
<script language="javascript" type="text/javascript">
$(document).ready(function() {
	$("#delete-form").submit(function(){
		var confirmtext = "{{ 'confirm.drop.sendmessageoptions'|trans({ '%school%': entity.sekolah.nama }) }}";
		confirmtext = confirmtext.replace(/&#039;/g, "'");
		return confirmDropButton(confirmtext);
	});
});
</script>
{% endblock content %}
