{% extends 'LanggasSisdikBundle::layout.html.twig' %}

{% form_theme form 'MopaBootstrapBundle:Form:fields.html.twig' %}

{% block page_heading %}{% trans from "headings" %}settings.user.add.inschool{% endtrans %}{% endblock %}

{% block content %}
<style type="text/css">
.form-horizontal .checkbox {
    padding-top: 0;
}
</style>

<form action="{{ path('settings_user_register_withschool') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
    {{ form_widget(form) }}
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8 col-md-offset-4 col-md-7 col-lg-offset-3 col-lg-9">
            <button type="submit" class="btn primary">{{ 'label.submit.add'|trans }}</button>
        </div>
    </div>
</form>

<ul class="nav nav-pills">
    <li>
    {% if is_expr_granted("hasRole('ROLE_SUPER_ADMIN')") %}
        <a href="{{ path('settings_user') }}">{{ 'link.backtolist'|trans }}</a>
    {% elseif is_expr_granted("hasRole('ROLE_ADMIN')") %}
        <a href="{{ path('settings_user_inschool_list') }}">{{ 'link.backtolist'|trans }}</a>
    {% endif %}
    </li>
</ul>
{% endblock content %}
