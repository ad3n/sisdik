{% extends 'LanggasSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}ubah.kategori.potongan{% endtrans %}{% endblock %}

{% block content %}
{{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8 col-md-offset-4 col-md-7 col-lg-offset-3 col-lg-9">
            <button type="submit" class="btn primary">{{ 'label.submit.update'|trans }}</button>
        </div>
    </div>
    {{ form_rest(edit_form) }}
{{ form_end(edit_form) }}

{{ form_start(delete_form, {'attr': {'id': 'delete-form', 'class': 'form-inline pull-right'}}) }}
{{ form_widget(delete_form) }}
{{ form_end(delete_form) }}

<ul class="nav nav-pills">
    <li>
        <a href="{{ path('kategori-potongan') }}">{{ 'link.backtolist'|trans }}</a>
    </li>
</ul>
{% endblock content %}

{% block javascripts_custom %}
<script language="javascript" type="text/javascript">
$(document).ready(function() {
    $("#delete-form").submit(function(){
        var confirmtext = "{{ 'confirm.drop.kategori.potongan'|trans({ '%kategori%': entity.nama, '%kode%': entity.kode }) }}";
        confirmtext = confirmtext.replace(/&#039;/g, "'");
        return confirmDropButton(confirmtext);
    });
});
</script>
{% endblock javascripts_custom %}
