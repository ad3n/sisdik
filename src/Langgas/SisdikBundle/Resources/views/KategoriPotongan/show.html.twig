{% extends 'LanggasSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}detail.kategori.potongan{% endtrans %}{% endblock %}
{% block content %}
<ul class="nav nav-pills pull-right">
    <li>
        <a href="{{ path('kategori-potongan_new') }}" class="add-link-a">
            <i class="fa fa-plus-square fa-lg fa-fw"></i>{{ 'label.tambah.kategori.potongan'|trans }}
        </a>
    </li>
</ul>

<dl>
    <dt>{{ 'label.school'|trans }}</dt>
    <dd>{{ entity.sekolah.nama }}</dd>
    <dt>{{ 'label.nama.kategori.potongan'|trans }}</dt>
    <dd>{{ entity.nama }}</dd>
    <dt>{{ 'label.code'|trans }}</dt>
    <dd>{{ entity.kode }}</dd>
    <dt>{{ 'label.description'|trans }}</dt>
    <dd>{{ entity.keterangan }}</dd>
</dl>

<div class="clearfix"></div>

{{ form_start(delete_form, {'attr': {'id': 'delete-form', 'class': 'form-inline pull-right'}}) }}
{{ form_widget(delete_form) }}
{{ form_end(delete_form) }}

<ul class="nav nav-pills">
    <li>
        <a href="{{ path('kategori-potongan') }}">{{ 'link.backtolist'|trans }}</a>
    </li>
    <li>
        <a href="{{ path('kategori-potongan_edit', {'id': entity.id}) }}">{{ 'link.edit'|trans }}</a>
    </li>
</ul>
{% endblock content %}

{% block javascripts_custom %}
<script language="javascript" type="text/javascript">
$(document).ready(function() {
    $("#delete-form").submit(function(){
        var confirmtext = "{{ 'confirm.drop.kategori.potongan'|trans({ '%kategori%': entity.nama, '%kode%': entity.kode }) }}";
        confirmtext = confirmtext.replace(/&#039;/g, "'");
        return confirmDropButton(confirmtext);
    });
});
</script>
{% endblock javascripts_custom %}
