{% extends 'LanggasSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}detail.vendor.sekolah{% endtrans %}{% endblock %}
{% block content %}
<ul class="nav nav-pills pull-right">
    <li>
        <a href="{{ path('vendor_sekolah_new') }}" class="add-link-a">
            <i class="fa fa-plus-square fa-lg fa-fw"></i>{{ 'label.tambah.vendor.sekolah'|trans }}
        </a>
    </li>
</ul>

<dl>
    <dt>{{ 'label.school'|trans }}</dt>
    <dd>{{ entity.sekolah.nama }}</dd>
    <dt>{{ 'label.jenis.vendor'|trans }}</dt>
    <dd>
        {% if entity.jenis == 'standar' %}
            {{ 'label.vendor.standar.sisdik'|trans }}
        {% else %}
            {{ 'label.vendor.khusus'|trans }}
        {% endif %}
    </dd>
    <dt>{{ 'label.url.pengirim.pesan'|trans }}</dt>
    <dd>{{ entity.urlPengirimPesan }}</dd>
</dl>

<div class="clearfix"></div>

{{ form_start(delete_form, {'attr': {'id': 'delete-form', 'class': 'form-inline pull-right'}}) }}
{{ form_widget(delete_form) }}
{{ form_end(delete_form) }}

<ul class="nav nav-pills">
    <li>
        <a href="{{ path('vendor_sekolah') }}">{{ 'link.backtolist'|trans }}</a>
    </li>
    <li>
        <a href="{{ path('vendor_sekolah_edit', {'id': entity.id}) }}">{{ 'link.edit'|trans }}</a>
    </li>
</ul>
{% endblock content %}

{% block javascripts_custom %}
<script language="javascript" type="text/javascript">
$(document).ready(function() {
    $("#delete-form").submit(function(){
        var confirmtext = "{{ 'confirm.drop.vendor.sekolah'|trans({ '%sekolah%': entity.sekolah.nama }) }}";
        confirmtext = confirmtext.replace(/&#039;/g, "'");
        return confirmDropButton(confirmtext);
    });
});
</script>
{% endblock %}
