{% extends 'LanggasSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}referensi.detail{% endtrans %}{% endblock %}
{% block content %}
<ul class="nav nav-pills pull-right">
    <li>
        <a href="{{ path('referensi_new') }}" class="add-link-a">
            <i class="fa fa-plus-square fa-lg fa-fw"></i>{{ 'label.tambah.perujuk'|trans }}
        </a>
    </li>
</ul>

<dl>
    <dt>{{ 'label.school'|trans }}</dt>
    <dd>{{ entity.sekolah.nama }}</dd>
    <dt>{{ 'label.nama.perujuk'|trans }}</dt>
    <dd>{{ entity.nama }}</dd>
    <dt>{{ 'label.ponsel'|trans }}</dt>
    <dd>{{ entity.ponsel }}</dd>
    <dt>{{ 'label.alamat'|trans }}</dt>
    <dd>{{ entity.alamat }}</dd>
    <dt>{{ 'label.nomor.identitas'|trans }}</dt>
    <dd>{{ entity.nomorIdentitas }}</dd>
</dl>

<div class="clearfix"></div>

<form id="delete-form" action="{{ path('referensi_delete', {'id': entity.id}) }}" method="post" class="form-inline pull-right">
    {{ form_widget(delete_form) }}
    <div class="form-actions">
        <button type="submit" class="btn alternative icon danger remove">{{ 'label.delete'|trans }}</button>
    </div>
</form>

<ul class="nav nav-pills">
    <li>
        <a href="{{ path('referensi') }}">{{ 'link.backtolist'|trans }}</a>
    </li>
    <li>
        <a href="{{ path('referensi_edit', {'id': entity.id }) }}">{{ 'link.edit'|trans }}</a>
    </li>
</ul>
{% endblock content %}

{% block javascripts_custom %}
<script language="javascript" type="text/javascript">
$(document).ready(function() {
    $("#delete-form").submit(function(){
        var confirmtext = "{{ 'confirm.drop.referensi'|trans({ '%nama%': entity.nama }) }}";
        confirmtext = confirmtext.replace(/&#039;/g, "'");
        return confirmDropButton(confirmtext);
    });
});
</script>
{% endblock javascripts_custom %}
