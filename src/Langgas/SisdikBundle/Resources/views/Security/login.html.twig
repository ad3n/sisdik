{% extends 'LanggasSisdikBundle::layout.html.twig' %}

{% block title %}{{ 'app.title'|trans }} - {{ 'app.keterangan'|trans }}{% endblock %}

{% block body %}
<style type="text/css">
body {
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #f5f5f5;
}
.network {
    max-width: 350px;
    margin: 0 auto 20px;
    text-align: center;
}
.network-logo {
    margin: 0 5px;
}
.form-signin {
    max-width: 350px;
    padding: 19px 29px 29px;
    margin: 0 auto 10px;
    background-color: #fff;
    border: 1px solid #e5e5e5;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
    -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
    -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
    box-shadow: 0 1px 2px rgba(0,0,0,.05);
}
.form-signin .form-signin-heading,
.form-signin .checkbox {
    margin-bottom: 10px;
}
.form-signin input[type="text"],
.form-signin input[type="password"] {
    font-size: 16px;
    height: auto;
    margin-bottom: 15px;
    padding: 7px 9px;
}
.login-error {
    margin-top: 10px;
    color: #ff0000;
}
.news {
    color: #000000;
    margin-bottom: 15px;
    font-size: 14px;
}
.news-info {
    display: block;
    padding-bottom: 10px;
}
</style>

{% block content %}
    <div class="container">
        <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
            <div>
            {% image '@LanggasSisdikBundle/Resources/public/images/logo_black.png' %}
                <a href="{{ path("_index") }}"><img src="{{ asset_url }}" alt="{{ 'alt.logo'|trans }}" border="0" width="92" /></a>
            {% endimage %}
            </div>
            <div id="copyright" style="margin: 0 0 10px 0; padding: 0; border: 0;">&copy; 2012 &ndash; {{ "now"|date("Y") }}</div>
            <div class="news">
                <span class="news-info">Sistem Informasi Pendidikan,<br>mempermudah administrasi sekolah.</span>
            </div>
            <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}">
            <input type="password" id="password" name="_password" class="form-control" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}">
            <button class="btn large primary" type="submit">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            {% block fos_user_content %}
                {% if error %}
                    <div class="login-error">{{ error|trans({}, 'FOSUserBundle') }}</div>
                {% endif %}
            {% endblock fos_user_content %}
        </form>
        <div class="network">
            {%- image '@LanggasSisdikBundle/Resources/public/images/logo/wordpress-logo-32-blue.png' -%}
            <a class="network-logo" href="http://blog.sisdik.com" target="_blank" title="Blog"><img src="{{ asset_url }}"></a>
            {%- endimage -%}
            {%- image '@LanggasSisdikBundle/Resources/public/images/logo/uservoice-32.png' -%}
            <a class="network-logo" href="https://sisdik.uservoice.com" target="_blank" title="User Voice"><img src="{{ asset_url }}"></a>
            {%- endimage -%}
        </div>
    </div>
{% endblock content %}

{% endblock body %}
