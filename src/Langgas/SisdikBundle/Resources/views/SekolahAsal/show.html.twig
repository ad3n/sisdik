{% extends 'LanggasSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}sekolah.asal.rincian{% endtrans %}{% endblock %}
{% block content %}
<ul class="nav nav-pills pull-right">
    <li>
        <a href="{{ path('sekolahasal_new') }}" class="add-link-a">
            <i class="fa fa-plus-square fa-lg fa-fw"></i>{{ 'label.tambah.sekolah.asal'|trans }}
        </a>
    </li>
</ul>

<dl>
    <dt>{{ 'label.nama.sekolah'|trans }}</dt>
    <dd>{{ entity.nama }}</dd>
    <dt>{{ 'label.kode.sekolah'|trans }}</dt>
    <dd>{{ entity.kode }}</dd>
    <dt>{{ 'label.alamat'|trans }}</dt>
    <dd>{{ entity.alamat }}</dd>
    <dt>{{ 'label.nama.penghubung'|trans }}</dt>
    <dd>{{ entity.penghubung }}</dd>
    <dt>{{ 'label.nomor.ponsel.penghubung'|trans }}</dt>
    <dd>{{ entity.ponselPenghubung }}</dd>
</dl>

<div class="clearfix"></div>

<form id="delete-form" action="{{ path('sekolahasal_delete', {'id': entity.id}) }}" method="post" class="form-inline pull-right">
    {{ form_widget(delete_form) }}
    <div class="form-actions">
        <button type="submit" class="btn alternative icon danger remove">{{ 'label.delete'|trans }}</button>
    </div>
</form>

<ul class="nav nav-pills">
    <li>
        <a href="{{ path('sekolahasal') }}">{{ 'link.backtolist'|trans }}</a>
    </li>
    <li>
        <a href="{{ path('sekolahasal_edit', {'id': entity.id}) }}">{{ 'link.edit'|trans }}</a>
    </li>
</ul>
{% endblock content %}

{% block javascripts_custom %}
<script language="javascript" type="text/javascript">
$(document).ready(function() {
    $("#delete-form").submit(function(){
        var confirmtext = "{{ 'confirm.drop.sekolah.asal'|trans({ '%nama%': entity.nama, '%kode%': entity.kode }) }}";
        confirmtext = confirmtext.replace(/&#039;/g, "'");
        return confirmDropButton(confirmtext);
    });
});
</script>
{% endblock javascripts_custom %}
