{% extends 'LanggasSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}layanansms.detail{% endtrans %}{% endblock %}

{% block content %}
<dl>
    <dt>{{ 'label.school'|trans }}</dt>
    <dd>{{ sekolah.nama }}</dd>
    <dt>{{ 'label.layanansms.jenis'|trans }}</dt>
    <dd>
    {% if entities|length > 0 %}
        {% for layanan in entities %}
            <ul><li>{{ daftarJenisLayanan[layanan.jenisLayanan]|trans }}</li></ul>
        {% endfor %}
    {% else %}
        {{ 'info.tidak.ada.layanan.sms.aktif'|trans }}
    {% endif %}
    </dd>
</dl>

<div class="clearfix"></div>

<ul class="nav nav-pills">
    <li><a href="{{ path('layanansms') }}">{{ 'link.backtolist'|trans }}</a></li>
</ul>
{% endblock content %}
