{% extends 'LanggasSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}tingkat.kelas.daftar{% endtrans %}{% endblock %}

{% block content %}
<ul class="nav nav-pills">
    <li>
        <a href="{{ path('tingkat-kelas_new') }}" class="add-link-a">
            <i class="fa fa-plus-square fa-lg fa-fw"></i>{{ 'label.tingkat.kelas.tambah'|trans }}
        </a>
    </li>
</ul>

<div class="clearfix"></div>

<table class="table zebra-striped bordered-table" id="no-more-tables">
    <thead>
        <tr>
            <th class="{% if pagination.isSorted('tingkat.nama') %}sorted{% endif %}">
                {{ knp_pagination_sortable(pagination, 'label.tingkat.kelas.nama'|trans, 'tingkat.nama') }}
            </th>
            <th class="{% if pagination.isSorted('tingkat.kode') %}sorted{% endif %}">
                {{ knp_pagination_sortable(pagination, 'label.code'|trans, 'tingkat.kode') }}
            </th>
            <th class="{% if pagination.isSorted('tingkat.urutan') %}sorted{% endif %}">
                {{ knp_pagination_sortable(pagination, 'label.order'|trans, 'tingkat.urutan') }}
            </th>
            <th>{{ 'label.actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for data in pagination %}
        <tr>
            <td data-title="{{ 'label.tingkat.kelas.nama'|trans }}">{{ data.nama }}</td>
            <td data-title="{{ 'label.code'|trans }}">{{ data.kode }}</td>
            <td data-title="{{ 'label.order'|trans }}">{{ data.urutan }}</td>
            <td data-title="{{ 'label.actions'|trans }}" class="row-actions">
                <a href="{{ path('tingkat-kelas_show', {'id': data.id}) }}" title="{{ 'tip.detail'|trans }}"><i class="fa fa-arrow-right"></i></a>
                <a href="{{ path('tingkat-kelas_edit', {'id': data.id}) }}" title="{{ 'tip.edit'|trans }}"><i class="fa fa-pencil"></i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{{ knp_pagination_render(pagination) }}
{% endblock content %}
