{% extends 'LanggasSisdikBundle::layout.html.twig' %}

{% block page_heading %}{% trans from "headings" %}settings.school.edit{% endtrans %}{% endblock %}

{% block content %}
<style type="text/css">
.form-horizontal .help-block {
    margin-top: 0;
}
</style>

<form action="{{ path('settings_specsch_update') }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
    {{ form_row(edit_form.nama) }}
    {{ form_row(edit_form.kode) }}
    {{ form_row(edit_form.alamat) }}
    {{ form_row(edit_form.kodepos) }}
    {{ form_row(edit_form.telepon) }}
    {{ form_row(edit_form.fax) }}
    {{ form_row(edit_form.email) }}
    {{ form_row(edit_form.norekening) }}
    {{ form_row(edit_form.bank) }}
    {{ form_row(edit_form.kepsek) }}
    <div class="form-group">
        {{ form_label(edit_form.awalPembiayaan) }}
            <div class="col-sm-3 col-md-2 col-lg-1">
                {{ form_widget(edit_form.awalPembiayaan) }}
            </div>
            <div class="col-sm-offset-4 col-sm-7 col-md-offset-4 col-md-6 col-lg-offset-3 col-lg-7">
                <p class="help-block">{{ edit_form.awalPembiayaan.vars.help_block|trans }}</p>
            </div>
    </div>
    <div class="form-group">
        {{ form_label(edit_form.akhirPembiayaan) }}
            <div class="col-sm-3 col-md-2 col-lg-1">
                {{ form_widget(edit_form.akhirPembiayaan) }}
            </div>
            <div class="col-sm-offset-4 col-sm-7 col-md-offset-4 col-md-6 col-lg-offset-3 col-lg-7">
                <p class="help-block">{{ edit_form.akhirPembiayaan.vars.help_block|trans }}</p>
            </div>
    </div>
    {{ form_rest(edit_form) }}
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8 col-md-offset-4 col-md-7 col-lg-offset-3 col-lg-9">
            <button type="submit" class="btn primary">{{ 'label.submit.update'|trans }}</button>
        </div>
    </div>
</form>

<ul class="nav nav-pills">
    <li>
        <a href="{{ path('settings_specsch') }}">{{ 'link.backtodetail'|trans }}</a>
    </li>
</ul>
{% endblock content %}
